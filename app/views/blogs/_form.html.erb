<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <%= blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Jason Dudley Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
   
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= form.text_area :body, placeholder: 'Start here...',  class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
