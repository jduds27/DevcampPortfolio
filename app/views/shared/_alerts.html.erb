<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Jason Dudley Portfolio", sticky: false) %>
  <% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Jason Dudley Portfolio", sticky: false) %>
  <% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], :title => "Jason Dudley Portfolio", sticky: false) %>
<% end %>